<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/relative_padding"
        android:background="@color/cardview_shadow_start_color">
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="@dimen/text_view_title_size"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold|normal"
            />
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_view_description_margin_top"
            android:textSize="@dimen/text_view_description_size"
            android:layout_toLeftOf="@+id/img"
            android:layout_below="@+id/textTitle"
            android:layout_alignParentLeft="true"
            android:text="@string/description"
            />

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/row_img_width"
            android:layout_height="@dimen/row_img_height"
            android:layout_marginLeft="@dimen/row_img_margin_left"
            android:layout_marginTop="@dimen/row_img_margin_top"
            android:layout_marginRight="@dimen/row_img_margin_right"
            android:layout_below="@+id/textTitle"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_launcher_background"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTitle"
            android:layout_toEndOf="@+id/img"
            android:background="@drawable/arrow"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>